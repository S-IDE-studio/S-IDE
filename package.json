{
  "name": "side",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run dev:web",
    "dev:web": "pnpm -F side-web run dev",
    "dev:server": "pnpm -F side-server run dev",
    "dev:desktop": "pnpm -F side-desktop run dev",
    "dev:mobile": "pnpm -F side-mobile run start",
    "build": "pnpm run build:web && pnpm run build:server && pnpm run build:desktop",
    "build:ui": "pnpm -F @side-ide/ui run build",
    "build:web": "pnpm -F side-web run build",
    "build:server": "pnpm -F side-server run build",
    "build:desktop": "pnpm run build:web && pnpm run build:server && pnpm -F side-desktop run build",
    "build:mobile": "pnpm -F side-mobile run build",
    "build:mobile:ios": "pnpm -F side-mobile run build:ios",
    "build:mobile:android": "pnpm -F side-mobile run build:android",
    "bundle:server": "node scripts/bundle-server.js",
    "bundle:server:zip": "node scripts/create-server-bundle.js",
    "generate-icons": "node scripts/generate-icons.js",
    "serve": "pnpm run build:web && pnpm run build:server && pnpm -F side-server run serve",
    "type-check": "pnpm run type-check:shared && pnpm run type-check:ui && pnpm run type-check:server && pnpm run type-check:web",
    "type-check:shared": "pnpm -F @side-ide/shared run type-check",
    "type-check:ui": "pnpm -F @side-ide/ui run type-check",
    "type-check:server": "pnpm -F side-server run type-check",
    "type-check:web": "pnpm -F side-web run type-check",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:server": "vitest --config apps/server/vitest.config.ts",
    "test:web": "cd apps/web && vitest --config vitest.config.ts --run",
    "test:rust": "cd apps/desktop/src-tauri && cargo test",
    "ci": "pnpm run lint && pnpm run type-check && pnpm run test:ci && pnpm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@testing-library/jest-dom": "^6.6.0",
    "archiver": "^7.0.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "eas-cli": "^10.0.0",
    "happy-dom": "^20.5.3",
    "vitest": "^2.1.0"
  }
}
