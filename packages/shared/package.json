{
  "name": "@side-ide/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for S-IDE",
  "type": "module",
  "main": "./utils.js",
  "types": "./utils.d.ts",
  "exports": {
    "./types": {
      "types": "./types.d.ts",
      "default": "./types.js"
    },
    "./utils": {
      "types": "./utils.d.ts",
      "default": "./utils.js"
    },
    "./utils-node": {
      "types": "./utils-node.d.ts",
      "default": "./utils-node.js"
    }
  },
  "files": [
    "*.ts",
    "*.js",
    "*.d.ts",
    "*.d.ts.map"
  ],
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
