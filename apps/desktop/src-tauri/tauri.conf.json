{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "S-IDE",
  "version": "3.0.0",
  "identifier": "com.side.ide",
  "build": {
    "beforeDevCommand": "cd ../.. && pnpm run dev:web",
    "beforeBuildCommand": "cd ../.. && pnpm run build:web && pnpm run build:server && pnpm run bundle:server",
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "S-IDE Studio IDE",
        "width": 1400,
        "height": 900,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": "createObjectURL 'self' blob: 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:* ws://localhost:*",
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "dmg", "app", "deb", "appimage"],
    "icon": ["icons/icon.ico", "icons/icon.icns", "icons/icon.png"],
    "publisher": "S-IDE studio",
    "resources": ["resources/**/*"],
    "createUpdaterArtifacts": "v1Compatible",
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico"
      },
      "wix": {
        "language": "en-US"
      },
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/S-IDE-studio/S-IDE/releases/latest/download/latest.json"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXkgNjRDQzgxMzMwMjM2Mzk5OApSV1NZT1RZQ000SE1aSFdiaVIvM0VSOEE1UVlJWkxLLzdIV3M5VEgwc3RLQzFDK1JvQkFKc1NHeQo="
    }
  }
}
