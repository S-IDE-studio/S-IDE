# Enforce LF line endings for all text files
* text=auto eol=lf

# Explicitly declare text files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.sh text eol=lf

# Source code
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.java text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.rs text eol=lf
*.go text eol=lf
*.py text eol=lf
*.rb text eol=lf
*.php text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.xml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.conf text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# Build files
*.gradle text eol=lf
Makefile text eol=lf
*.mk text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf
